{% extends './base.jinja' %}

{% if sort_order == 'ascending' %}
{% set sort_order = 'descending' %}
{% elif sort_order== 'descending'%}
{% set sort_order = 'ascending' %}
{% endif %}


{% block title %}
YAMZ Search Results
{% endblock %}

{% block headline %}
Search Results for <i>{{ search_terms }}</i>
{% endblock headline %}

{% block content %}
<table class="table table-borderless table-sm">
    <thead>
        <tr>
            <th>Term</th>
            <th>Definition</th>
            <th>Contributor</th>
            <th>Modified</th>
        <tr>
    </thead>
    <!--<a href="{{ url_for('io.export_term_results', search_terms=search_terms) }}">[Export Terms]</a>-->

    <tbody>
        {% set count = namespace(value=0) %}
        {% for term in term_list %}
        {% set count.value = count.value + 1 %}
        <tr>
            <td>
                <a href="{{ url_for('term.display_term', concept_id=term.concept_id) }}">{{ term.term_string }}</a>
            </td>
            <td width="70%">
                {% if term.definition %}
                {{ term.definition[0:200] | highlight_term_string(search_terms) }}
                {% if term.definition|length > 200%}
                <span class="collapse"
                    id="collapseDiv{{count.value}}">{{term.definition[200:]|highlight_term_string(search_terms)}}</span>
                <button class="btn btn-sm" type="button" data-bs-toggle="collapse"
                    data-bs-target="#collapseDiv{{count.value}}">
                    ...
                </button>
                {% endif %}
                {% else %}
                <em>No definition available</em>
                {% endif %}
            </td>
            <td>
                {{ term.contributor.full_name }}
            <td>
                {{ term.modified|format_date }}
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% if prev_url %}
<a href="{{ prev_url }}">Prev</a>
{% endif %}

{% if next_url %}
<a href="{{ next_url }}">Next</a>
{% endif %}


{% endblock content%}